@model IEnumerable<NewStripeApp.Models.Item>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <form class="d-flex justify-content-center" asp-action="ConfirmCheckout" method="post">
                <input type="hidden" name="Id" value="@item.Id" />
                <h3>@item.Name</h3>
                <img src="@item.ImageUrl" />
                <input type="hidden" name="PriceId" value="@item.PriceId" />
                <input class="itemBtn btn btn-dark" type="submit" value="Checkout" />
            </form>

        }
    </div>
</div>